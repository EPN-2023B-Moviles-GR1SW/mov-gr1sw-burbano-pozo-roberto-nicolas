<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_form_t"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="false"
    tools:context=".TeamForm">

    <Button
        android:id="@+id/btn_cancel_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="144dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_save_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancel_t"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel_t"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel_t"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/foundation_t"
        android:layout_width="351dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:contextClickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Fecha de fundacion"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/name_t"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_t"
        app:layout_constraintTop_toBottomOf="@+id/name_t" />

    <EditText
        android:id="@+id/income_t"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Ingresos netos"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/foundation_t"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/foundation_t"
        app:layout_constraintTop_toBottomOf="@+id/foundation_t" />

    <EditText
        android:id="@+id/name_t"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Nombre Equipo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/active_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:text="Â¿Esta activo?"
        app:layout_constraintEnd_toEndOf="@+id/income_t"
        app:layout_constraintStart_toStartOf="@+id/income_t"
        app:layout_constraintTop_toBottomOf="@+id/income_t" />

    <TextView
        android:id="@+id/id_label_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/name_t"
        app:layout_constraintEnd_toEndOf="@+id/name_t"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_t" />

</androidx.constraintlayout.widget.ConstraintLayout>